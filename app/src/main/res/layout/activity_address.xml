<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/address_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:textDirection="rtl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/address_top_padding_size"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="نام"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_tv_text_size" />

                <EditText
                    android:id="@+id/first_name_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_et_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/address_top_padding_size"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="نام خانوادگی"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_tv_text_size" />

                <EditText
                    android:id="@+id/last_name_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_et_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/address_top_padding_size"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="استان"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_tv_text_size" />

                <EditText
                    android:id="@+id/state_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_et_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/address_top_padding_size"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="شهر"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_tv_text_size" />

                <EditText
                    android:id="@+id/city_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_et_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/address_top_padding_size"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="آدرس"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_tv_text_size" />

                <EditText
                    android:id="@+id/address_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_et_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/address_top_padding_size"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="کد پستی"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_tv_text_size" />

                <EditText
                    android:id="@+id/post_code_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_et_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/address_top_padding_size"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="شماره تماس"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_tv_text_size" />

                <EditText
                    android:id="@+id/phone_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:ems="10"
                    android:inputType="phone"
                    android:textAlignment="viewStart"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/address_et_text_size" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/address_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/ok_continue_btn"
        android:onClick="addressOK"
        android:text="@string/ok_and_continue"
        android:textSize="@dimen/address_tv_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>